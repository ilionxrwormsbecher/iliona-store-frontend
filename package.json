{
    "name": "app-store",
    "version": "0.1.0",
    "private": true,
    "jest": {
        "collectCoverageFrom": [
            "**/*.{js,jsx,ts,tsx}",
            "!**/node_modules/**",
            "!**/src/themes/**",
            "!**/src/store/**",
            "!**/src/i18n/**",
            "!**/src/models/**",
            "!**/src/reportWebVitals.ts",
            "!**/src/useKeycloak.ts",
            "!**/src/Keycloak.ts",
            "!**/src/react-app-env.d.ts",
            "!**/src/index.tsx",
            "!**/mocks/**"
        ]
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.36",
        "@fortawesome/free-solid-svg-icons": "^5.15.4",
        "@fortawesome/react-fontawesome": "^0.1.16",
        "@hookform/resolvers": "^2.8.8",
        "@react-keycloak/web": "^3.4.0",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^16.11.19",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/styled-components": "^5.1.21",
        "bootstrap": "^5.1.3",
        "cross": "^1.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "env": "^0.0.2",
        "node-sass": "^7.0.1",
        "react": "^17.0.2",
        "react-bootstrap": "^2.1.1",
        "react-dom": "^17.0.2",
        "react-error-boundary": "^3.1.4",
        "react-hook-form": "^7.27.1",
        "react-intl": "^5.24.4",
        "react-redux": "^7.2.6",
        "react-router-dom": "^6.2.1",
        "react-scripts": "^5.0.0",
        "react-select": "^5.2.2",
        "redux-devtools-extension": "^2.13.9",
        "redux-first-history": "^5.0.8",
        "redux-thunk": "^2.4.1",
        "sass": "^1.48.0",
        "styled-components": "^5.3.3",
        "typescript": "^4.5.4",
        "web-vitals": "^2.1.3",
        "yup": "^0.32.11"
    },
    "scripts": {
        "start:cy": "cross-env REACT_APP_USE_MSW=true react-scripts -r @cypress/instrument-cra start",
        "start": "react-scripts start",
        "starts-prod": "react-scripts build --production && serve -s build -l 3000",
        "start:msw": "cross-env REACT_APP_USE_MSW=true react-scripts start",
        "cy:open": "cypress open",
        "test:e2e:dev": "start-server-and-test start:cy http://localhost:3000 cy:open",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "test-coverage": "npm test -- --coverage --watchAll=false",
        "eject": "react-scripts eject",
        "lint": "eslint -c .eslintrc.js --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "npm run lint -- --fix",
        "log:coverage": "nyc report",
        "log:coverage:summary": "nyc report --reporter=text-summary"
    },
    "nyc": {
        "all": true,
        "include": "src/pages/*.tsx"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.16.5",
        "@cypress/code-coverage": "^3.9.12",
        "@cypress/instrument-cra": "^1.4.0",
        "@testing-library/cypress": "^8.0.2",
        "cypress": "^9.5.2",
        "cypress-file-upload": "^5.0.8",
        "eslint-plugin-cypress": "^2.12.1",
        "husky": "^4.3.8",
        "msw": "^0.38.2",
        "nyc": "^15.1.0",
        "start-server-and-test": "^1.14.0"
    },
    "msw": {
        "workerDirectory": "public"
    }
}
